{
  "private": true,
  "name": "@pssbletrngle/werewolf",
  "scripts": {
    "dev": "turbo dev",
    "web": "turbo dev --filter=web...",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:ci": "turbo test -- --run --coverage",
    "build": "turbo build",
    "clean": "turbo clean && rimraf node_modules",
    "check": "turbo check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "turbo": "^1.10.16"
  },
  "packageManager": "pnpm@8.11.0"
}
